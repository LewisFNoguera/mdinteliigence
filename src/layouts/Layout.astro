---
import { ViewTransitions } from 'astro:transitions';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

interface Props {
  title: string;
}

const {title} = Astro.props;
---
<!DOCTYPE html>
<html class="h-full bg-gray-50" lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="description" content="We build websites, apps, and more.">
  <meta name="viewport" content="width=device-width"/>
  <link rel="icon" type="image/svg+xml" href="/MDI.svg"/>
  <meta name="generator" content="MDIntelligence website"/>
  <title>{title}</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
  <style>
    html {
      scroll-behavior: smooth;
    }
  </style>
  <ViewTransitions />
</head>
<body class="h-full font-lato">

<div class="bg-white">
  <Header />

  <main class="isolate" transition:animate="fade">
    <slot />
  </main>

  <Footer/>
</div>

</body>
</html>

