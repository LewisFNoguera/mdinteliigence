---
import ArrowRight from '../icons/ArrowRight.astro';

interface Props {}

const {} = Astro.props;
---
<section id="contact" class="relative border-t border-gray-900/10 py-24 sm:py-32  bg-blue-50">
<div class="relative isolate">
  <div class="mx-auto max-w-7xl px-8 sm:px-0">
    <div class="relative pr-6 pt-24 sm:pt-32 lg:static lg:pr-8 lg:pt-48">
      <h2 class="text-2xl tracking-tight text-black font-lato-sans font-light pb-4">
        Say hello!
      </h2>
      <p class="text-5xl leading-8 text-gray-600 font-lato">
        Let's talk about your project.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 pt-20">
      <!-- form -->
      <form action="" method="post" class="pb-24 sm:pb-32">
        <input
          type="hidden"
          name="csrfmiddlewaretoken"
          value="Z0bmepYoKOgOHKPQgiZx3LOBVCVLKhetntCGueWINfWsoskZOsUYYa2sCelk4Wz1"
        />
        <div class="max-w-xl lg:mr-0 lg:max-w-lg">
          <div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
            <div>
              <label
                for="id_first_name"
                class="block text-sm font-lato leading-6 text-black"
              >
                First name<span class="text-xs text-red-500">*</span>
              </label>
              <div class="mt-2.5">
                <input
                  type="text"
                  name="first_name"
                  maxlength="50"
                  class="block w-full rounded-md border-0 bg-white px-3.5 py-2 text-gray-800 shadow-sm ring-1 ring-inset ring-white/20 focus:ring-0 focus:ring-inset focus:ring-white sm:text-sm sm:leading-6"
                  required
                  id="id_first_name"
                />
              </div>
            </div>
            <div>
              <label
                for="id_last_name"
                class="block text-sm font-lato leading-6 text-black"
              >
                Last name<span class="text-xs text-red-500">*</span>
              </label>
              <div class="mt-2.5">
                <input
                  type="text"
                  name="last_name"
                  maxlength="50"
                  class="block w-full rounded-md border-0 bg-white px-3.5 py-2 text-gray-800 shadow-sm ring-1 ring-inset ring-white/20 focus:ring-0 focus:ring-inset focus:ring-white sm:text-sm sm:leading-6"
                  required
                  id="id_last_name"
                />
              </div>
            </div>
            <div class="sm:col-span-2">
              <label
                for="id_email"
                class="block text-sm font-lato leading-6 text-black"
              >
                Email<span class="text-xs text-red-500">*</span>
              </label>
              <div class="mt-2.5">
                <input
                  type="email"
                  name="email"
                  maxlength="254"
                  class="block w-full rounded-md border-0 bg-white px-3.5 py-2 text-gray-800 shadow-sm ring-1 ring-inset ring-white/20 focus:ring-0 focus:ring-inset focus:ring-white sm:text-sm sm:leading-6"
                  required
                  id="id_email"
                />
              </div>
            </div>
            <div class="sm:col-span-2">
              <label
                for="id_phone"
                class="block text-sm font-lato leading-6 text-black"
              >
                Phone number
              </label>
              <div class="mt-2.5">
                <input
                  type="text"
                  name="phone"
                  class="block w-full rounded-md border-0 bg-white px-3.5 py-2 text-gray-800 shadow-sm ring-1 ring-inset ring-white/20 focus:ring-0 focus:ring-inset focus:ring-white sm:text-sm sm:leading-6"
                  id="id_phone"
                />
              </div>
            </div>
            <div class="sm:col-span-2">
              <label
                for="id_message"
                class="block text-sm font-lato leading-6 text-black"
              >
                Message<span class="text-xs text-red-500">*</span>
              </label>
              <div class="mt-2.5">
                <textarea
                  name="message"
                  cols="40"
                  rows="10"
                  class="block w-full rounded-md border-0 bg-white px-3.5 py-2 text-gray-800 shadow-sm ring-1 ring-inset ring-white/20 focus:ring-0 focus:ring-inset focus:ring-white sm:text-sm sm:leading-6"
                  required
                  id="id_message"></textarea>
              </div>
            </div>
          </div>

          <div class="mt-8 flex justify-start">
            <button
            type="submit"
            class="rounded-full z-10 w-auto bg-blue-700 border px-6 py-5 text-md capitalize font-semibold text-white shadow-sm hover:bg-blue-600 hover:text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 flex gap-3">
            Here We Go! <ArrowRight/>            
        </button>
            <!-- <button
              type="submit"
              class="rounded-md border border-black bg-black px-3.5 py-2.5 text-center text-sm font-lato text-white shadow-sm hover:bg-white hover:text-black focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black"
            >
              Send message
            </button> -->
          </div>
        </div>
      </form>
      <div class="relative px-6 pb-20 lg:static lg:px-8">
        <div class="mx-auto max-w-xl lg:mx-0 lg:max-w-lg">
          <div class="mx-auto mt-6 max-w-lg space-y-4">
            <p class="text-center font-bold">MDIntelligence</p>
            <p class="text-center">
              163 Madison Ave. Suite 220-5,<br>
              Morristown, New Jersey 07960
            </p>

            <p class="text-center font-bold">Call us</p>
            <p class="text-center">(973) 123 1234</p>

            <p class="text-center font-bold">
              Customer Service email 
            </p>
            <p class="text-center">
              hello@xxxx.com
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</section>