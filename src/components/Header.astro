---
import { fade } from 'astro:transitions';
import Close from '../icons/Close.astro'
interface Props {
}

const menu = {
    services: 'Services',
    about: 'About',
    works: 'Our Works',
    contact: 'Contact'
}
---
<!-- Header -->
<header class="absolute inset-x-0 top-0 z-50 bg-indigo-100/10">
    <nav class="flex items-center justify-between p-6 lg:px-8 bg-white rounded-full shadow-xl w-10/12  lg:w-3/5 mx-auto mt-2 fixed left-0 right-0" aria-label="Global">
      <div class="flex lg:flex-1">
        <a href="#home" class="-m-1.5 p-1.5">
          <span class="sr-only">MDIntelligence</span>
          <img class="h-8 w-auto" src="/MDIntelligence.png" alt="">
        </a>
      </div>
      <div id="openNavBar" class="flex lg:hidden">
        <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
          <span class="sr-only">Open main menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
               aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"/>
          </svg>
        </button>
      </div>
      <div class="hidden lg:flex lg:gap-x-12">
        <a href="#what-we-do" class="text-sm font-semibold leading-6 text-gray-900 hover:border-blue-500 hover:border-b-2">{menu.services}</a>
        <a href="#about" class="text-sm font-semibold leading-6 text-gray-900 hover:border-blue-500 hover:border-b-2">{menu.about}</a>
        <a href="#our-works" class="text-sm font-semibold leading-6 text-gray-900 hover:border-blue-500 hover:border-b-2">{menu.works}</a>
        <a href="#contact" class="text-sm font-semibold leading-6 text-gray-900 hover:border-blue-500 hover:border-b-2">{menu.contact}</a>
      </div>
     
    </nav>
    <!-- Mobile menu, show/hide based on menu open state. -->
    <div id="navBar" class="hidden lg:hidden" role="dialog" aria-modal="true">
      <!-- Background backdrop, show/hide based on slide-over state. -->
      <div class="fixed inset-0 z-50"></div>
      <div
        class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-blue-700 px-6 py-6  sm:ring-1 sm:ring-gray-900/10 transition-all duration-1000 ease-in-out">
        <div class="grid items-center justify-center">
          <a href="#home" class="-m-1.5 p-1.5">
            <span class="sr-only">MDIntelligence</span>
            <img class="h-8 w-auto" src="/MDIntelligence-white.png" alt="">
          </a>
        </div>
        <button id="closeNavBar" type="button" class="-m-2.5 rounded-md p-2.5 text-white absolute bottom-0 left-0 right-0 grid items-center justify-center mb-20">
          <span class="sr-only">Close menu</span>
          <Close />
        </button>
        <div class="mt-6 flow-root">
          <div class="-my-6 divide-y divide-gray-500/10 items-center justify-center grid h-screen">
            <div class="space-y-2 py-6 grid items-center justify-center gap-10">
              <a href="#what-we-do"
                 class="-mx-3 block rounded-lg px-3 py-2 text-2xl font-semibold leading-7 text-white hover:text-gray-50">{menu.services}</a>
              <a href="#about"
                 class="-mx-3 block rounded-lg px-3 py-2 text-2xl font-semibold leading-7 text-white hover:text-gray-50">{menu.about}</a>
              <a href="#our-works"
                 class="-mx-3 block rounded-lg px-3 py-2 text-2xl font-semibold leading-7 text-white hover:text-gray-50">{menu.works}</a>
              <a href="#contact"
                 class="-mx-3 block rounded-lg px-3 py-2 text-2xl font-semibold leading-7 text-white hover:text-gray-50">{menu.contact}</a>
            </div>           
          </div>
        </div>
      </div>
    </div>
  </header>

  <script>
    const navBar: HTMLElement | null = document.getElementById('navBar');
    const closeNavBar = document.getElementById('closeNavBar');
    const openNavBar = document.getElementById('openNavBar');
  
    closeNavBar?.addEventListener('click', toggleMenu);
    openNavBar?.addEventListener('click', toggleMenu);
  
    function toggleMenu() {
      navBar?.classList.toggle("hidden");
    }
  </script>